{
  "name": "excelsior",
  "version": "0.0.1",
  "description": "New York State's design system and shared code component library.",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/excelsior.js",
  "module": "dist/excelsior.es.js",
  "exports": {
    ".": {
      "import": "./dist/excelsior.es.js",
      "require": "./dist/excelsior.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:umd": "vite build --config vite.config.umd.js",
    "build:packages": "npm run lint:packages && npm run build --workspaces",
    "build:all": "npm run lint && npm run build && npm run build:packages && npm run build:umd",
    "build:watch": "vite",
    "lint": "eslint .",
    "lint:packages": "eslint packages/**/*.{ts,js}",
    "lint:fix": "eslint . --fix",
    "lint:fix:packages": "eslint packages/**/*.{ts,js} --fix",
    "test": "wtr --node-resolve",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ITS-HCD/excelsior.git"
  },
  "author": "NYS Design System Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ITS-HCD/excelsior/issues"
  },
  "homepage": "https://github.com/ITS-HCD/excelsior/blob/main/README.md",
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@open-wc/testing": "^3.2.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@storybook/web-components": "^8.3.6",
    "@storybook/web-components-vite": "^8.3.6",
    "@types/mocha": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.10.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-storybook": "^0.9.0",
    "i": "^0.3.7",
    "lit": "^3.2.1",
    "npm": "^10.9.0",
    "sinon": "^19.0.2",
    "storybook": "^8.3.6",
    "tslib": "^2.7.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  },
  "peerDependencies": {
    "lit": "^3.2.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended",
      "plugin:storybook/recommended",
      "plugin:storybook/recommended"
    ]
  }
}
