{
  "name": "excelsior",
  "version": "0.0.1",
  "description": "New York State's design system and shared code component library.",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/excelsior.js",
  "module": "dist/excelsior.es.js",
  "exports": {
    ".": {
      "import": "./dist/excelsior.es.js",
      "require": "./dist/excelsior.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && vite build",
    "build:packages": "npm run lint:packages && npm run build --workspaces",
    "build:all": "npm run lint && npm run build && npm run build:packages",
    "build:watch": "vite",
    "lint": "eslint .",
    "lint:packages": "eslint packages/**/*.{ts,js}",
    "lint:fix": "eslint . --fix",
    "lint:fix:packages": "eslint packages/**/*.{ts,js} --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ITS-HCD/excelsior.git"
  },
  "author": "NYS Design System Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ITS-HCD/excelsior/issues"
  },
  "homepage": "https://github.com/ITS-HCD/excelsior/blob/main/README.md",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-prettier": "^5.2.1",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.9"
  },
  "peerDependencies": {
    "lit": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
