{
  "compilerOptions": {
    "target": "ES2020",         // Transpile to ES2020
    "module": "ESNext",         // Use ES modules
    "lib": ["ES2020", "DOM"],   // Support for ES2020 and DOM types
    "strict": true,             // Enable strict type-checking
    "sourceMap": true,          // Enable source maps for easier debugging
    "declaration": true,        // Generate .d.ts files for TypeScript consumers
    "declarationMap": true,     // Source maps for declaration files
    "moduleResolution": "Node", // Resolve modules as Node.js does
    "esModuleInterop": true,    // Interoperability between CommonJS and ES modules
    "outDir": "./dist",         // Output directory for transpiled files
    "rootDir": "./src",         // Source directory containing TypeScript files
    "isolatedModules": true     // Ensure each file can be transpiled independently
  },
  "include": ["packages/**/*"],  // Include all TypeScript files in the packages directory
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist directories
}
