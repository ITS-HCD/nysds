{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist",              // Output directory for compiled files
    "rootDir": ".",                  // Project root as the rootDir to include both src/ and packages/
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",                      // Include files from the global src directory
    "packages/**/*"                  // Include files from all package subdirectories
  ],
  "exclude": [
    "node_modules",
    "dist"                           // Exclude the output directory
  ]
}